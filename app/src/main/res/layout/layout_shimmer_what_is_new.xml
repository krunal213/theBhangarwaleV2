<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmer_create_request_layout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="18dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:id="@+id/item"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/drawable_shimmer_rounded_corner_what_is_new">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:includeFontPadding="false"
                android:ellipsize="end"
                android:maxLines="1"
                android:background="#4FB492"/>

            <TextView
                android:id="@+id/textview_subtitle"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textview_title"
                app:layout_constraintLeft_toLeftOf="@id/textview_title"
                android:layout_marginTop="1dp"
                android:background="#4FB492"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:id="@+id/item_two"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/item"
            android:background="@drawable/drawable_shimmer_rounded_corner_what_is_new">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_title_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:includeFontPadding="false"
                android:ellipsize="end"
                android:maxLines="1"
                android:background="#4FB492"/>

            <TextView
                android:id="@+id/textview_subtitle_two"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textview_title_one"
                app:layout_constraintLeft_toLeftOf="@id/textview_title_one"
                android:layout_marginTop="1dp"
                android:background="#4FB492"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>